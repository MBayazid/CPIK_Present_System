<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:background="@color/fui_transparent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#633F51B5"
            android:elevation="@dimen/dimen_5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:tint="@color/fui_transparent"
                    android:layout_width="65dp"
                    android:layout_height="43dp"
                    android:src="@drawable/icon_cheak_attendance" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="start"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2FF5EFEB"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/agency"
                        android:text="Date : "

                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tollbar_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="##/##/##"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white1"
                        android:textSize="16sp"
                        android:textStyle="italic|bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:fontFamily="@font/apercu_regular"
                        android:text="Technology : "
                        android:textColor="@color/white1"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tollbar_techonology"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity=""
                        android:lines="1"

                        android:text="###"
                        android:textColor="@color/white1"
                        android:textSize="16sp"
                        android:textStyle="bold|italic" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2FF5EFEB"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/apercu_regular"
                        android:text="Semester : "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white1"
                        android:textSize="16dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tollbar_semester"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="# "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white1"
                        android:textSize="16sp"
                        android:textStyle="italic|bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/apercu_regular"
                        android:text="Subject : "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white1"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tollbar_subcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#### "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white1"
                        android:textSize="16sp"
                        android:textStyle="italic|bold" />

                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/edit_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_mode_edit_black_24dp"
                    android:text="Edit"
                    android:background="@drawable/button_background"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/apercu_regular"
                        android:text="Total "

                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white1"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tollbar_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#### "
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white1"
                        android:textSize="16sp"
                        android:textStyle="italic|bold"
                        android:drawableTint="@color/colorPrimary"
                        android:drawableEnd="@drawable/ic_people"/>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/Student_Type1"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_5dp"

                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dialog_button_background_drawable"
                    android:drawableStart="@drawable/ic_delete_forever_black_24dp"
                    android:drawableTint="@color/orange1"


                    android:padding="@dimen/dimen_5dp"
                    android:text="Trash"
                    android:textAllCaps="false"
                    android:textColor="@color/White" />

                <Button
                    android:id="@+id/buttonOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_50dp"
                    android:background="@drawable/dialog_button_background_drawable"
                    android:drawableEnd="@drawable/ic_note_add_black_24dp"
                    android:drawableTint="@color/blue1"
                    android:gravity="center"
                    android:padding="@dimen/dimen_5dp"

                    android:text="Keep"
                    android:textAllCaps="false"

                    android:textColor="@color/White"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>