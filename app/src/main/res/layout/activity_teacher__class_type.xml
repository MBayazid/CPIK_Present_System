<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teachears_Function.Teacher_Class_type"
    android:focusableInTouchMode="true"
    android:nextFocusDown="@id/editText_sub_code"
    android:background="@color/AliceBlue"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="3"
                    android:gravity="center"
                    android:visibility="gone"
                   >
                    <TextView
                        android:textColor="@color/black_semi_transparent"
                        android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day Before"/>
                    <TextView
                        android:textColor="@color/black_semi_transparent"
                        android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"/>

                    <TextView
                        android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                        android:textColor="@color/black_semi_transparent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day After"/>


                </LinearLayout>
                <DatePicker
                    android:id="@+id/datePicker1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    android:soundEffectsEnabled="true"
                    />



            </LinearLayout>


                 <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="2">
                     <LinearLayout
                         android:layout_marginTop="@dimen/dimen_10dp"

                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:gravity="center"
                         android:padding="@dimen/dimen_10dp"

                         >
                         <TextView
                             android:gravity="center"
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:text="Technolog : "
                             android:textColor="@color/Black"
                             android:textStyle="italic"
                             android:textSize="@dimen/dimen_20dp"/>

                         <Spinner
                             android:id="@+id/spinner_depertment"
                             android:layout_width="93dp"
                             android:layout_height="match_parent"
                             android:backgroundTint="@color/colorAccent"
                             android:gravity="center"
                             android:spinnerMode="dropdown" />

                     </LinearLayout>
                     <LinearLayout
                         android:layout_marginTop="@dimen/dimen_10dp"

                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal"
                         android:gravity="center"
                         android:padding="@dimen/dimen_10dp"
                       >
                         <TextView
                             android:gravity="center"
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:text="Semester : "
                             android:textColor="@color/Black"
                             android:textStyle="italic"
                             android:textSize="@dimen/dimen_20dp"/>
                         <Spinner
                             android:id="@+id/spinner2_semester"

                             android:layout_width="93dp"
                             android:layout_height="match_parent"
                             android:gravity="center"
                             android:backgroundTint="@color/colorAccent"
                             android:spinnerMode="dropdown"
                   />

                     </LinearLayout>
                     <LinearLayout
                         android:layout_marginTop="@dimen/dimen_10dp"

                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:gravity="center"
                       >

                         <android.support.design.widget.TextInputLayout
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:hint="Subject Code"
                             android:textColorHint="@color/colorAccent"
                             android:focusedByDefault="false"

                             >
                             <EditText
                                 android:focusedByDefault="false"
                                 android:gravity="center"
                                 android:id="@+id/editText_sub_code"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_marginTop="20dp"
                                 android:ems="10"
                                 android:textColor="@color/colorPrimary"
                                 android:textStyle="bold"
                                 android:inputType="number"
                                 app:layout_constraintEnd_toEndOf="@+id/spinner2_semester"
                                 app:layout_constraintStart_toStartOf="@+id/spinner2_semester"
                                 app:layout_constraintTop_toBottomOf="@+id/spinner2_semester"
                                 android:nextFocusDown="@id/button_submit"
                                 android:backgroundTint="@color/colorPrimary"/>

                         </android.support.design.widget.TextInputLayout>
                     </LinearLayout>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:gravity="center">

                         <Button
                             android:textAllCaps="false"
                             android:id="@+id/button_submit"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="20dp"
                             android:background="@drawable/theme_button"
                             android:textColor="@color/white1"
                             android:drawableEnd="@drawable/ic_assignment_black_24dp"
                             android:fontFamily="@font/vrindab"
                             android:textSize="@dimen/dimen_20dp"
                             android:padding="@dimen/dimen_10dp"
                             android:text="@string/begin_class" />
                          <Button
                              android:textAllCaps="false"
                             android:id="@+id/button_get_report"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginTop="10dp"
                             android:background="@drawable/theme_button"
                             android:textColor="@color/white1"
                             android:drawableEnd="@drawable/ic_check_green_24dp"
                              android:drawableTint="@color/white1"
                              android:fontFamily="@font/vrindab"
                              android:textSize="@dimen/dimen_20dp"
                             android:padding="@dimen/dimen_10dp"
                             android:text="@string/get_class_report" />


                     </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</android.support.constraint.ConstraintLayout>