<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_rectangle_550"
    android:elevation="@dimen/dimen_10dp"
    android:gravity="start|center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_general_user__profile">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/dimen_40dp">



        <com.circular_profile_picture.CircularView
            android:id="@+id/header_image"
            android:layout_width="65dp"
            android:layout_height="65dp"

            android:src="@drawable/ic_avatar"
            app:civ_border_color="@color/nav_drawer_blue_theam_color"
            app:civ_border_width="1dp" />

        <!--<ImageView-->
        <!--android:id="@+id/imageView"-->
        <!--android:layout_width="71dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:contentDescription="@string/nav_header_desc"-->

        <!--android:elevation="@dimen/dimen_5dp"-->
        <!--app:srcCompat="@drawable/ic_avatar" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_40dp"
        android:weightSum="3"
        android:gravity="center">


        <TextView
            android:id="@+id/header_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:textColor="@color/white1"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_20dp"
            android:text="Name"
           />

        <TextView
            android:id="@+id/header_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            android:textColor="@color/white1"
            android:textStyle="italic"
            android:text="Email"
            android:textSize="@dimen/dimen_10dp"

            />
        <TextView
            android:id="@+id/header_Mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white1"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_15dp"
            android:text="phone Number"


            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/ic_rectangle_550"
        android:gravity="end|center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_25dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/ic_fab_star"
            android:backgroundTint="@color/nav_drawer_blue_theam_color"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white1"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>
